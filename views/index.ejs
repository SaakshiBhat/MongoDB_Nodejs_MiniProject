<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>

    <style>
    </style>
</head>
<body>
    <div class="container">
        <div class="small-container">
            <form action="/add" method="post">
                <input type="text" name="title" placeholder="Add Task" class="special_input" required>
                <input type="submit" name="submit" value="Add" class="special_input">
            </form>

            <div class="display">
                <%if(records.length!=0){ %>
                <% records.forEach(record => {%>
                <div class="contents">
                    <input type="text" name ="title" value="<%= record.title %>" id="<%=record.id %>" >
                    <button value="Delete" class="delete">Delete</button>
                    <button value="Update" class="update">Update</button>                    
                </div>

               <% })%>
               <%} else {%>
                <p>No Tasks Yet</p>

               <%}%>

            
            </div>
        </div>
    </div>
    
    <script>

        //FOR DELETE
        const del = document.querySelectorAll('.delete');
        //console.log(del);
        del.forEach(item => {
            item.addEventListener('click', async (e)=>{
            e.preventDefault();
                const title = item.parentElement.firstElementChild.value;
                const id = item.parentElement.firstElementChild.id;
                console.log(title);
                console.log(id);
                const res = await fetch ('/delete',{
                    method:'POST',
                    body: JSON.stringify({title,id}),
                    headers:{
                        'Content-Type' : 'application/json',
                        'Accept': 'application/json'
                    },
                });
            })
        });

        //FOR UPDATE
        const up = document.querySelectorAll('.update');
        console.log(up);
        up.forEach(doc=>{
        
            doc.addEventListener('click',async (e)=>{
                e.preventDefault();
                const title = doc.parentElement.firstElementChild.value;
                const id = doc.parentElement.firstElementChild.id;

                console.log(title);
                console.log(id);
                const res = await fetch ('/update',{
                    method:'POST',
                    body: JSON.stringify({title,id}),
                    headers:{
                        'Content-Type' : 'application/json',
                        'Accept': 'application/json'
                    },
                });
            })
        })
    </script>
</body>
</html>